{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "make debug test",
      "type": "shell",
      "command": "make",
      "args": ["CXX=clang++", "DEBUG=1", "test"],
      "options": {
        "cwd": "${workspaceFolder}/test/unittest"
      },
      "problemMatcher": ["$gcc"]
    },
    {
      "label": "make test",
      "type": "shell",
      "command": "make",
      "args": ["CXX=clang++", "test"],
      "options": {
        "cwd": "${workspaceFolder}/test/unittest"
      },
      "problemMatcher": ["$gcc"]
    },
    {
      "label": "make clean",
      "type": "shell",
      "command": "make",
      "args": ["clean"],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": ["$gcc"]
    },
    {
      "label": "make doc",
      "type": "shell",
      "command": "make",
      "args": ["doc"],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": ["$gcc"]
    }
  ]
}
